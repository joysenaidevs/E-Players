
@model Equipe
@{
    //Chamamos a nossa Model Equipe
    //Vamos trocar uma informação da estrutura da página
    //Meta tag -> ex: Title

    ViewData ["Title"] = "Equipes";

    //Formulario para fazer cadastro de nova equipe
    //Vamos criar o formulario

    //Chamamos a tag
    //Através da action cadastrar quando o botao for submetido, sabe-se que tem que chamar o método cadastrar recebendo as informações
    <form method="POST" action='@Url.Action("Cadastrar")' enctype="multipart/form-data"> 
        <label>ID</label>
        <input type="text" name="IdEquipe" />

        <label>Nome</label>
        <input type="text" name="Nome" />

        <label>Imagem</label>
        <input type="file" name="Imagem" />

        <button type="submit">Cadastrar</button>
    </form>

    <table class="table table-striped table-responsive">
        <thead>
            <th>ID</th>
            <th>Nome</th>
            <th>Arquivo</th>
        </thead>
        <tbody> 
            @foreach (Equipe equipe in ViewBag.Equipes)
            {
                //Percorrer a lista de equipes
                //Enviamos um pacote de equipes na ViewBag


                //Pegar a equipe que criamos e acessar as propiedades
                <tr>
                    <td>@equipe.IdEquipe</td>
                    <td>@equipe.Nome</td>
                    <td><img src="/img/Equipes/@equipe.Imagem" alt="Imagem da @equipe.Nome" widht = "40"></td>
                    <td> <a asp-area="Link para excluir uma equipe" asp-Controller="Equipe" asp-action="Excluir" asp-route-id="@equipe.IdEquipe"> Excluir </a></td>
                </tr>

            }
        </tbody>

    </table>
}